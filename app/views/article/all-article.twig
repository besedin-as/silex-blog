<article class="col-md-12 normal-a">
	<h1>{{ post.title }}</h1>
	<span>By <a href="{{ path('user.profile', {name: app.user_controller.getUsername(post.id_user)}) }}">{{ app.user_controller.getUsername(post.id_user) }}</a></span>
	<span>{{ post.created }}</span>
	<p>{{ (post.body[:150] ~ '...')|raw }}</p>
	<a href="{{ path('article.id', {id: post.id}) }}" class="btn btn-default btn-sm all-read-more">read more</a>
</article>